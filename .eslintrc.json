{
  "parser": "@typescript-eslint/parser",
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "max-len": ["warn", { "code": 80 }],
    "max-lines-per-function": ["warn", 20]
    "no-console": "warn",
    "semi": ["error", "never"],
    "quotes": ["error", "single"],
    "max-params": ["warn", 5]
  }
}
